{% extends 'base.html.twig' %}

{% block title %}Subjects{% endblock %}

{% block body %}

<div class="subject-main">
    <h1 class="subject-title">All Subjects</h1>

    <a href="{{ path("app_subjectcategory") }}">
        <p>See all categories</p>
    </a>

    <a href="{{ path("new_subject") }}">
        <p>Create a new subject</p>
    </a>

    <div class="subject-cards">
        {% for subject in allsubjects %}
            <div class="subject-card">
                <figure class="subject-card-banner unselectable">
                    <img src="{{ asset("img/default_image.jpg") }}" alt="{{ subject.label }}'s banner image">
                </figure>

                <h2 class="subject-card-label">{{ subject.label }}</h2>
                <p class="subject-card-description">{{  subject.category.label }}</p>
                <a class="subject-card-infobutton" href="{{ path("show_subject", {"id" : subject.id}) }}">
                    <p>See more</p>
                </a>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}
