{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}

<div class="subject-main">
    <h1 class="general-title">{{ category.label}}</h1>

    <p>This category contains {{ category.countallsubjects }} subjects.</p>

    <br>

    {% if category.subjects | length > 0 %}
        <table>
            <tr>
            <th>Formation</th>
            </tr>
            {% for subject in category.subjects %}
                <tr >
                    <td><a class="general-card-infobutton unselectable" href="{{ path("show_subject", {"id" : subject.id }) }}"> {{ subject.label }}</a></td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}



    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_TEACHER') %}
        <a class="general-edit-button" href="{{ path("edit_subjectcategory", {"id" : category.id}) }}">
            <img class="general-edit-button-icon unselectable" src="{{ asset("img/icon_edit.png") }}" alt="Edit icon">
            <p>Edit</p>
        </a>

        <a class="general-delete-button" href="{{ path("delete_subjectcategory", {"id" : category.id} ) }}">
            <img class="general-delete-button-icon unselectable" src="{{ asset("img/icon_trash.png") }}" alt="Edit icon">
            <p>Delete</p>
        </a>
    {% endif %}

</div>

{% endblock %}